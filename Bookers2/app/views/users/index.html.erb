<div class="container">

<dv class="row">
 <div class="col-xs-4">
 <%= render 'users/list', user: @user, newbook: @newbook %>
 </div>

<div class="col-xs-8">

<h2>Users</h2>

<table class="table table-hover">
	<thread>
    <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
    </tr>
	</thread>
<tbody>
	<% @users.each do |user| %>
	<tr>
      <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '50x50' %>
      </td>
      <td><%= user.name %>
      </td>
      <td><%= link_to "Show", user_path(user.id) %>
      </td>
	</tr>
	<% end %>
</tbody>
</table>

</div>
</div>
</div>