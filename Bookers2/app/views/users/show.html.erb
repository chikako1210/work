<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <p><%= flash[:notice] %></p>
  </div>
<% end %>


<div class="container">

<dv class="row">
 <div class="col-xs-4">
 <%= render 'users/list', user: @user, newbook: @newbook %>
</div>

<div class="col-xs-8">

 <h2>Books</h2>

 <table class="table table-hover">
	<thread>
    <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th></th>
    </tr>
	</thread>
 <tbody>
 <% @books.each do |book| %>
    <tr>
    <td>
    <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '50x50' %>
    </td>
    <td>
    <%= link_to book.title, book_path(book.id) %>
    </td>
    <td>
    <%= book.body %>
   </td>
   </tr>
 <% end %>
 </tbody>
 </table>
</div>



 </div>
</div>