<div class="container">

<dv class="row">
 <div class="col-xs-4">
 <%= render 'users/list', user: @user, newbook: @newbook %>
</div>

<div class="col-xs-8">

<h2>Books</h2>

<table class="table table-hover">
	<thread>
    <tr>
    <th></th>
    <th>title</th>
    <th>opinion</th>
    </tr>
	</thread>
<tbody>
	<% @books.each do |book| %>
	<tr>
      <td><%= link_to user_path(book.user_id) do %>
           <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '50x50' %>
          <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %>
      </td>
      <td><%= book.body %>
      </td>
	</tr>
	<% end %>
</tbody>
</table>

</div>
</div>
</div>