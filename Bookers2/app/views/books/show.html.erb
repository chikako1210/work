<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
  	<p><%= flash[:notice] %></p>
  </div>
<% end %>

<div class="container">

<dv class="row">
 <div class="col-xs-4">
　<%= render 'users/list', user: @user, newbook: @newbook %>
</div>

<div class="col-xs-8">

<h2>Book detail</h2>

<table class="table">
<tr>
<td>
<div>
<%= link_to user_path(@book.user_id) do %>
<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '50x50' %><span style="display: block;"><%= @book.user.name %></span><% end %>
</div></td>
<td><%= link_to @book.title, book_path(@book.id) %></td>
<td><%= @book.body %></td>

<% if @book.user == current_user %>
<td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %></td>
<td><%= link_to "Destroy", book_path(@book), class:"btn btn-danger", method: :delete, "data-confirm" => "Are you sure？" %></td>
<% end %>
</tr>
</table>
</div>

</div>

</div>