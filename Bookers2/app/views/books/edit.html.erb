<div class="container">


<h2>Editing Book</h2>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
  <div class="alert alert-warning" role="alert">
    <h4><%= @book.errors.count %>件のerrorがあります。</h4>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="form-body">
    <div class="form-group">
     <label>Title</label>
     <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
     <label>Opinion</label>
     <%= f.text_area :body, class:"form-control" %>
    </div>

    <div class="actions">
    <%= f.submit 'Update Book', class:"btn btn-primary btn-block" %>
    <% end %>
    </div>


    <%= link_to 'show', book_path(@book.id) %>
    |
    <%= link_to 'back', books_path %>
</div>